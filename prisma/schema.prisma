generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Author {
  id    Int    @id @default(autoincrement())
  name  String @unique
  books Book[]
}

model Book {
  id       Int       @id @default(autoincrement())
  title    String
  volume   Int
  serie    String?
  resume   String
  rating   Int
  returned Boolean
  format   String
  borrower String?
  date     DateTime?

  author   Author @relation(fields: [authorId], references: [id])
  authorId Int

  genre   Genre @relation(fields: [genreId], references: [id])
  genreId Int
}

model Genre {
  id    Int    @id @default(autoincrement())
  name  String @unique
  books Book[]
}
