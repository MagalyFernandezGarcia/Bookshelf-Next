generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Author {
  id            String @id @default(cuid())
  name          String
}



model Book {
    id        Int      @id @default(autoincrement())
    title     String
    volume    Int
    serie     String?
    author    String
    genre     String
    resume    String
    rating    Int
    returned  Boolean
    format    String
    borrower  String? 
    date      DateTime? 
    
}
