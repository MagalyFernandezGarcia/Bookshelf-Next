generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Author {
  id            String @id @default(cuid())
  name          String
}

model Book {
  id            String @id @default(cuid())
  name          String
}


